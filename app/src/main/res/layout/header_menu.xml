<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_colors"
    android:layout_height="@dimen/_150sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/text_userCommentImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/gg"
            app:civ_border_color="#B9BBC5"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#E3E4EA"
            app:civ_shadow_radius="@dimen/_4sdp" />

        <TextView
            android:id="@+id/textNavUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_horizontal"
            android:text="Mehedi Hasan Tarek"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNavUsergmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:text="Gmail: tarek@gmail.com"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>