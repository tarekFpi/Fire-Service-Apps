<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_second"
    tools:context=".View.CompanyVerify_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_id"
        android:background="@color/Coral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_companyVerifie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/White"
            app:title="Company Verify"
            />
    </com.google.android.material.appbar.AppBarLayout>


  <ScrollView
      android:layout_below="@+id/appbar_id"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_8sdp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_20sdp"
              android:fontFamily="@font/talic"
              android:id="@+id/text_nidfontSide"
              android:textColor="@color/white"
              android:text="Fonte Side"/>

          <androidx.cardview.widget.CardView
              android:layout_centerHorizontal="true"
              android:id="@+id/cardview_nidfontSide"
              android:layout_below="@+id/text_nidfontSide"
              android:layout_marginTop="@dimen/_7sdp"
              android:layout_width="@dimen/_300sdp"
              android:layout_height="@dimen/_150sdp"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              app:cardCornerRadius="@dimen/_10sdp"
              app:cardElevation="@dimen/_10sdp">

         <RelativeLayout
             android:background="@drawable/edit_backgroud"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ImageView
                 android:id="@+id/company_fontSide"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:scaleType="fitXY"
                 android:src="@drawable/nid1" />

             <ImageView
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_32sdp"
                 android:layout_height="@dimen/_32sdp"
                 android:scaleType="fitXY"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/_25sdp"
                 android:src="@drawable/ic_baseline_camera_enhance_24"/>
         </RelativeLayout>
          </androidx.cardview.widget.CardView>

          <TextView
              android:id="@+id/text_nidBackSide"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/cardview_nidfontSide"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_8sdp"
              android:fontFamily="@font/talic"
              android:text="Back Side"
              android:textColor="@color/white"
              android:textSize="@dimen/_20sdp" />

          <androidx.cardview.widget.CardView
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/text_nidBackSide"
              android:id="@+id/cardview_nidBack"
              android:layout_marginTop="@dimen/_7sdp"
              android:layout_width="@dimen/_300sdp"
              android:background="@color/white"
              android:layout_height="@dimen/_150sdp"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              app:cardCornerRadius="@dimen/_10sdp"
              app:cardElevation="@dimen/_10sdp">

              <RelativeLayout
                  android:background="@drawable/edit_backgroud"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <ImageView
                      android:id="@+id/image_backSide"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:scaleType="fitXY"
                      android:src="@drawable/nid3" />

                  <ImageView
                      android:layout_gravity="center"
                      android:layout_width="@dimen/_32sdp"
                      android:layout_height="@dimen/_32sdp"
                      android:scaleType="fitXY"
                      android:layout_alignParentBottom="true"
                       android:layout_alignParentRight="true"
                      android:layout_marginRight="@dimen/_25sdp"
                      android:src="@drawable/ic_baseline_camera_enhance_24"/>
              </RelativeLayout>

          </androidx.cardview.widget.CardView>

          <LinearLayout
              android:layout_below="@+id/cardview_nidBack"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <Spinner
                  android:id="@+id/division_spinner"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_50sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:background="@drawable/spinner_style"
                  android:padding="@dimen/_15sdp" />

              <Spinner
                  android:id="@+id/distric_spinner"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_50sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:background="@drawable/spinner_style"
                  android:padding="@dimen/_15sdp" />

              <Spinner
                  android:id="@+id/thana_spinner"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_50sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:background="@drawable/spinner_style"
                  android:padding="@dimen/_15sdp" />

              <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_16sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  style="@style/OutlinedRoundedBox"
                  app:boxStrokeColor="@color/white"
                  app:boxStrokeWidth="@dimen/_1sdp"
                  android:textColorHint="@color/white"
                  app:hintEnabled="false">


                  <EditText
                      android:background="@drawable/edit_backgroud"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:ems="10"
                      android:hint="Company Name"
                      android:id="@+id/edit_companyVerifyName"
                      android:inputType="text"
                      android:maxLines="1"
                      android:importantForAutofill="no"
                      android:paddingLeft="8dp"
                      android:textColorHighlight="@color/white"
                      android:textColor="@color/white"
                      android:textColorHint="@color/white" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_16sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  style="@style/OutlinedRoundedBox"
                  app:boxStrokeColor="@color/white"
                  app:boxStrokeWidth="@dimen/_1sdp"
                  android:textColorHint="@color/white"
                  app:hintEnabled="false">


                  <EditText
                      android:background="@drawable/edit_backgroud"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:ems="10"
                      android:hint="Company Owner"
                      android:id="@+id/edit_VerifycompanyOwner"
                      android:inputType="text"
                      android:maxLines="1"
                      android:importantForAutofill="no"
                      android:paddingLeft="8dp"
                      android:textColorHighlight="@color/white"
                      android:textColor="@color/white"
                      android:textColorHint="@color/white" />
              </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_16sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  style="@style/OutlinedRoundedBox"
                  app:boxStrokeColor="@color/white"
                  app:boxStrokeWidth="@dimen/_1sdp"
                  android:textColorHint="@color/white"
                  app:hintEnabled="false">


                  <EditText
                      android:background="@drawable/edit_backgroud"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:ems="10"
                      android:hint="Address"
                      android:id="@+id/edit_VerifyAddress"
                      android:inputType="text"
                      android:maxLines="1"
                      android:importantForAutofill="no"
                      android:paddingLeft="8dp"
                      android:textColorHighlight="@color/white"
                      android:textColor="@color/white"
                      android:textColorHint="@color/white" />
              </com.google.android.material.textfield.TextInputLayout>


              <info.hoang8f.widget.FButton
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_16sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:layout_marginEnd="@dimen/_16sdp"
                  android:backgroundTint="@color/Indigo"
                  android:text="Verify Information"
                  android:fontFamily="@font/cambay"
                  android:textAllCaps="false"
                  android:onClick="Verify_btninformation"
                  android:textColor="@color/white" />
          </LinearLayout>
      </RelativeLayout>
  </ScrollView>


</RelativeLayout>